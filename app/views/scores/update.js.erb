$("#average_score").html("<%= @assignment.average_grade %>%");

if (<%= @score.destroyed? %>) {
  changeUpdateToCreate();
}
else if (<%= !@updated %>) {
  alert("Score could not be saved.");
}

function changeUpdateToCreate() {
  $form = $("form[student='<%= @score.student_id %>']");
  $form.find("input[value='patch']").remove();
  $form.attr("action", "<%= scores_path %>");
  $form.attr("class", "new_score");
  $form.attr("id", "new_score");
}
