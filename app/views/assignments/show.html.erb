<div class="row">
<h1 class="col-md-4"><%= @assignment.name %></h1>
<h1 class="col-md-4">max points: <%= @assignment.points %></h1>
<h1 class="col-md-4" id="average-field">average grade: <span id="average"><%= @assignment.average_grade %>%</span></h1>
</div>
<div class="row">
	<div class="col-md-9">
		<p>
		<%= link_to "Back to your homepage", teacher_class_path(current_user, @assignment.course_section) %><br>
		</p>
		<% if @assignment.document.instance.document_file_size %>
			<%= link_to "Download", @assignment.document.url(:original, false) %>
			<object width="700" height="850" data="<%=@assignment.document.url(:original)%>"></object>
		<% end %>
	</div>

	<div class="col-md-3">
		<h3>Scores (out of <%=@assignment.points%> points)</h3>
		
		<% @assignment.course_section.students.each do |student| %>
			<%= form_for @scores[student.id], remote: true, authenticity_token: true do |f| %>
				<%= f.label :student, student.full_name %>
				<%= f.hidden_field :student_id, value: student.id %>
				<%= f.hidden_field :assignment_id, value: @assignment.id %>
				<%= f.number_field :points_earned, in:0..@assignment.points %>
				<%= f.submit %><br>
			<% end %>
		<% end %>
	</div>

</div>