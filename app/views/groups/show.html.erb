<% if @groups %>
  
  <h3>Groups for <%= @course_section.name %></h3>
  
	<% @groups.each do |group| %>
	  <p><% group.students.each do |kid| %></p>
	    <%= kid.full_name %>
	  <% end %>
	  <hr>
	<% end %>

<% else %>

  <h4>You haven't generated groups yet.</h4>

<% end %>

<%= link_to "Back to course page", teacher_class_path(current_user, @course_section) %>