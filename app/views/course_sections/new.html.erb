<div class="row">
	<div class="col-lg-6">
		<div class="well bs-component">
<legend>Create a New Section for <%= @course_section.course.name %></legend>
<%= form_for @course_section, url: teacher_classes_path(@teacher) do |f| %>
	<div class="form-group">
	<%= f.label :name, "Course Secion Name" %>
	<%= f.text_field :name, placeholder: "e.g. Ruby-007", :class => "form-control" %>
	<%= f.hidden_field :course_teacher_assignment_id, value: @course_teacher_assignment.id %>
	</div>

	<div class="form-group">
	<%= f.submit :class => "btn btn-primary" %>
	</div>
<% end %>

